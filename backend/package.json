{
  "name": "tetris-backend",
  "version": "2.0.0",
  "type": "module",
  "description": "Backend server for Tetris game with highscore management",
  "main": "server.js",
  "scripts": {
    "start": "node server-mongo.js",
    "start:simple": "node server-simple.js",
    "dev": "nodemon server-mongo.js",
    "dev:simple": "nodemon server-simple.js",
    "start:mongo": "node server-mongo.js",
    "dev:mongo": "node --watch server-mongo.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:api": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/api.test.js",
    "test:calculator": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/scoreCalculator.test.js",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "mongo:backfill": "node scripts/mongo-backfill.js",
    "build": "echo 'No build step required for Node.js'",
    "deploy:railway": "railway up",
    "deploy:render": "echo 'Deploy to Render via dashboard or git push'",
    "health": "curl -f http://localhost:3001/api/health || exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "tetris",
    "game",
    "backend",
    "express",
    "sqlite"
  ],
  "author": "Tetris Team",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.1.0",
    "mongoose": "^8.17.2",
    "morgan": "^1.10.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb": "^5.9.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
